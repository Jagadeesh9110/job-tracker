<%- include('./includes/head.ejs') %>
  </head>
  <body>
    <main>
      <%- include('./includes/navbar.ejs') %>
      <h1>Job Listings</h1>

    <% if (jobs.length === 0) { %>
    <p>No jobs available yet. Please check back later.</p>
    <% } else { %>
    <ul>
      <% jobs.forEach(job => { %>
      <li>
        <h2><%= job.title %> at <%= job.company %></h2>
        <p><%= job.description %></p>
        <p>Status: <%= job.status %></p>
      </li>
      <% }) %>
    </ul>
    <% } %>
    </main>
<%- include('./includes/footer.ejs') %>
